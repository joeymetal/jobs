<%= form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :trading_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :trading_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fancy_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fancy_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cnpj, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cnpj, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :commercial_activity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commercial_activity, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :foundation, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :foundation, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn btn-default' %>
  </div>
<% end %>
