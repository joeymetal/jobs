<div class="container"><h1> Contato </h1>

        <div class="container">
      <div class="col-xs-6 col-md-3 ">.col-xs-6 .col-md-4</div>
          <div class="col-xs-6 col-md-6">
           <div align="left"
           >
          <h3>Enviar uma mensagem para nos</h3>

      

          <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
          <div class="form-group">
            <%= f.input :nome, :required => true%></div>
            <div class="form-group">
            <%= f.input :email, :required => true, :class=> 'form-control' %></div>
            <div class="form-group">
            <%= f.input :mensagem, :as => :text, :required => true, :class=> 'form-control' %></div>
            <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
            </div>
            <div>
              </br>
              <%= f.button :submit, 'Enviar a mensagem', :class=> "btn btn-primary" %>
            </div>
          <% end %>
        </div>
          </div>
          <div class="col-xs-6 col-md-3">.col-xs-6 .col-md-4</div>
        </div>
</div>