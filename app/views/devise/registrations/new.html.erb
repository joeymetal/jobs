<div class="container">
      <div class="col-xs-6 col-md-3 well">.col-xs-6 .col-md-4</div>
          <div class="col-xs-6 col-md-6">
           
           <h2>Registrar-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characteres m√≠nimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
  </div>
<!-- in users/_form.html.erb -->
  <div class="field">
     <h3>Escolha seu Tipo de conta</h3>
      <% for role in User::ROLES %>
        <% if role == "applicant" %>
          <%= radio_button_tag "user[roles][#{role}]", role, checked = true, {:name => "user[roles][]"}%>
          <h3><%= f.label :cliente %><br /><%# label_tag "Cliente", role.humanize %></h3>
        <% end %>
        <% if role == "customer" %>
          <%= radio_button_tag "user[roles][#{role}]", role, checked = false, {:name => "user[roles][]"}%>
        <h3><%= f.label :empresa %><br /><%# label_tag "user_roles_#{role}", role.humanize %></h3>
        <% end %>
        <%= hidden_field_tag "user[roles][]", "" %>
      <% end %>
  </div>
  <!--div tipo usuario -->

  <div class="actions">
    <%= f.submit "Registrar-se", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


          </div>
      <div class="col-xs-6 col-md-3 well">.col-xs-6 .col-md-4</div>
</div>