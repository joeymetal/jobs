<%= form_for @applicant_job, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :applicant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :applicant_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :job_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :job_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applicant_jobs_path, :class => 'btn' %>
  </div>
<% end %>
