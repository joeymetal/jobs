<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:skills) %>:</strong></dt>
  <dd><%= @profile.skills %></dd>
  <dt><strong><%= model_class.human_attribute_name(:objectives) %>:</strong></dt>
  <dd><%= @profile.objectives %></dd>
  <dt><strong><%= model_class.human_attribute_name(:formations) %>:</strong></dt>
  <dd><%= @profile.formations %></dd>
  <dt><strong><%= model_class.human_attribute_name(:professional_experiences) %>:</strong></dt>
  <dd><%= @profile.professional_experiences %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qualifications) %>:</strong></dt>
  <dd><%= @profile.qualifications %></dd>
  <dt><strong><%= model_class.human_attribute_name(:additional_informations) %>:</strong></dt>
  <dd><%= @profile.additional_informations %></dd>
  <dt><strong><%= model_class.human_attribute_name(:applicant_id) %>:</strong></dt>
  <dd><%= @profile.applicant_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
